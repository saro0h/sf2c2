{% extends 'AppBundle::layout.html.twig' %}

{% import 'AppBundle::macro.html.twig' as utils %}

{% block title %}
    {{ parent() }} {{ 'home'|trans }}
{% endblock %}

{% block content %}
    {{ utils.breadcrumb({'home': app.request.attributes.get('_route')}) }}

    <h2>{{ 'game.title.guess_mysterious_word'|trans }}</h2>

    <p class="attempts">
        {# {{ 'game.attempts'|trans({'%remaining_attempts%': 11}) }} #}
        {{ 'game.attempts'|transchoice(11) }}
    </p>

    <ul class="word_letters">
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
        <li class="letter hidden">
            ?
        </li>
    </ul>

    <br class="clearfix" />

    <p class="attempts">
        <a href="/game/reset">{{ 'game.reset'|trans }}</a>
    </p>

    <br class="clearfix" />

    <h2>{{ 'game.try_a_letter'|trans }}</h2>

    <ul>
        {% for letter in 'A'..'Z' %}
            <li class="letter">
                <a href="/game/letter/{{ letter }}">
                    {{ letter }}
                </a>
            </li>
        {% endfor %}
    </ul>

    <h2>{{ 'game.try_word'|trans }}</h2>

    <form action="/game/word" method="post">
        <p>
            <label for="word">{{ 'game.word'|trans }}</label>
            <input type="text" id="word" name="word"/>
            <button type="submit">{{ 'game.let_me_guess'|trans }}</button>
        </p>
    </form>
{% endblock %}
